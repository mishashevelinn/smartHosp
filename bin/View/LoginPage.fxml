<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<AnchorPane fx:id="loginPage" prefHeight="500.0" prefWidth="800.0" snapToPixel="false" stylesheets="@stylesheet.css" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="View.FXMLController">
   <children>
      <AnchorPane fx:id="loginPane" layoutX="449.0" layoutY="135.0" prefHeight="231.0" prefWidth="300.0" styleClass="inputBlock">
         <children>
            <Button fx:id="loginButton" defaultButton="true" layoutX="25.0" layoutY="142.0" mnemonicParsing="false" onAction="#handleLoginButton" prefHeight="32.0" prefWidth="250.0" styleClass="button1" text="log in">
               <cursor>
                  <Cursor fx:constant="HAND" />
               </cursor>
            </Button>
            <PasswordField fx:id="passwordField" layoutX="25.0" layoutY="82.0" prefHeight="40.0" prefWidth="250.0" promptText="password" styleClass="inputFields" />
            <TextField fx:id="userNameField" layoutX="25.0" layoutY="35.0" prefHeight="40.0" prefWidth="250.0" promptText="user name" styleClass="inputFields" />
            <Button fx:id="forgotPasswordButton" layoutX="95.0" layoutY="191.0" mnemonicParsing="false" pickOnBounds="false" prefHeight="26.0" prefWidth="111.0" styleClass="button2" text="forgot password?" />
         </children></AnchorPane>
      <AnchorPane fx:id="logoPane" prefHeight="500.0" prefWidth="400.0" styleClass="logoBlock">
         <children>
            <ImageView fitHeight="408.0" fitWidth="368.0" layoutX="16.0" layoutY="66.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@media/logo.png" />
               </image>
            </ImageView>
         </children>
      </AnchorPane>
      <Text fill="#ff9999" layoutX="463.0" layoutY="83.0" strokeType="OUTSIDE" strokeWidth="0.0" text="in order to use the system, please enter your credentials:" wrappingWidth="250.0">
         <font>
            <Font name="System Bold" size="15.0" />
         </font>
      </Text>
      <Text fill="#ff9999" layoutX="588.0" layoutY="490.0" strokeType="OUTSIDE" strokeWidth="0.0" text="all rights reserved to nathan gurfinkel 2020" textAlignment="CENTER" wrappingWidth="212.0">
         <font>
            <Font size="10.0" />
         </font>
      </Text>
   </children>
</AnchorPane>
